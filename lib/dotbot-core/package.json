    "./scenarioEngine": {
      "import": "./dist/scenarioEngine/index.js",
      "require": "./dist/scenarioEngine/index.js",
      "types": "./dist/scenarioEngine/index.d.ts"
    }
  },
  "files": [
    "dist"

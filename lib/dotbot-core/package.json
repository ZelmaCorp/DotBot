{
  "name": "@dotbot/core",
  "version": "0.5.0",
  "description": "DotBot core library for Polkadot operations through natural language",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "author": "",
  "license": "GNU General Public License v3.0",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "prepare": "npm run build"
  },
  "dependencies": {
    "@polkadot/api": "^14.3.1",
    "@polkadot/keyring": "^14.0.1",
    "@polkadot/types": "^14.3.1",
    "@polkadot/util": "^14.0.1",
    "@polkadot/util-crypto": "^14.0.1",
    "pino": "^9.9.4"
  },
  "peerDependencies": {
    "@polkadot/api": "^14.3.1",
    "@polkadot/extension-dapp": "^0.53.1"
  },
  "optionalDependencies": {
    "@acala-network/chopsticks-core": "^1.2.5",
    "idb": "^8.0.3"
  },
  "devDependencies": {
    "typescript": "^5.3.3",
    "@polkadot/extension-dapp": "^0.53.1",
    "@acala-network/chopsticks-core": "^1.2.5",
    "idb": "^8.0.3"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"

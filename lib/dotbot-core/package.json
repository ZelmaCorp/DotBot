{
  "name": "@dotbot/core",
  "version": "0.8.2",
  "description": "DotBot core library for Polkadot operations through natural language",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "author": "Zelma Corp",
  "license": "GNU General Public License v3.0",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "prepare": "npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix"
  },
  "dependencies": {
    "@polkadot/api": "^14.3.1",
    "@polkadot/keyring": "^14.0.1",
    "@polkadot/types": "^14.3.1",
    "@polkadot/util": "^14.0.1",
    "@polkadot/util-crypto": "^14.0.1",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "idb": "^8.0.3",
    "pino": "^9.9.4"
  },
  "peerDependencies": {
    "@polkadot/api": "^14.3.1",
    "@polkadot/extension-dapp": "^0.53.1",
    "@polkadot/rpc-augment": "^14.3.1"
  },
  "optionalDependencies": {
    "pino-pretty": "^13.1.3"
  },
  "overrides": {
    "@polkadot/rpc-provider": "^14.3.1"
  },
  "devDependencies": {
    "@polkadot/extension-dapp": "^0.53.1",
    "@types/jest": "^29.5.14",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^8.57.0",
    "idb": "^8.0.3",
    "jest": "^29.7.0",
    "pino-pretty": "^13.1.3",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./*": {
      "import": "./dist/*.js",
      "require": "./dist/*.js",
      "types": "./dist/*.d.ts"
    },
    "./services/ai": {
      "import": "./dist/services/ai/index.js",
      "require": "./dist/services/ai/index.js",
      "types": "./dist/services/ai/index.d.ts"
    },
    "./agents": {
      "import": "./dist/agents/index.js",
      "require": "./dist/agents/index.js",
      "types": "./dist/agents/index.d.ts"
    },
    "./prompts": {
      "import": "./dist/prompts/system/index.js",
      "require": "./dist/prompts/system/index.js",
      "types": "./dist/prompts/system/index.d.ts"
    },
    "./scenarioEngine": {
      "import": "./dist/scenarioEngine/index.js",
      "require": "./dist/scenarioEngine/index.js",
      "types": "./dist/scenarioEngine/index.d.ts"
    }
  },
  "files": [
    "dist"
  ]
}

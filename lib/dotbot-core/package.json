{
  "name": "@dotbot/core",
  "version": "0.7.0",
  "description": "DotBot core library for Polkadot operations through natural language",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "author": "",
  "license": "GNU General Public License v3.0",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "prepare": "npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@polkadot/api": "^14.3.1",
    "@polkadot/keyring": "^13.5.9",
    "@polkadot/types": "^14.3.1",
    "@polkadot/util": "^13.5.9",
    "@polkadot/util-crypto": "^13.5.9",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "idb": "^8.0.3",
    "pino": "^9.9.4"
  },
  "peerDependencies": {
    "@polkadot/api": "^14.3.1",
    "@polkadot/extension-dapp": "^0.53.1",
    "@polkadot/rpc-augment": "^14.3.1"
  },
  "optionalDependencies": {
    "pino-pretty": "^13.1.3"
  },
  "devDependencies": {
    "@polkadot/extension-dapp": "^0.53.1",
    "@types/jest": "^29.5.14",
    "idb": "^8.0.3",
    "jest": "^29.7.0",
    "pino-pretty": "^13.1.3",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./*": {
      "import": "./dist/*.js",
      "require": "./dist/*.js",
      "types": "./dist/*.d.ts"
    },
    "./services/ai": {
      "import": "./dist/services/ai/index.js",
      "require": "./dist/services/ai/index.js",
      "types": "./dist/services/ai/index.d.ts"
    },
    "./agents": {
      "import": "./dist/agents/index.js",
      "require": "./dist/agents/index.js",
      "types": "./dist/agents/index.d.ts"
    },
    "./prompts": {
      "import": "./dist/prompts/system/index.js",
      "require": "./dist/prompts/system/index.js",
      "types": "./dist/prompts/system/index.d.ts"
    },
    "./scenarioEngine": {
      "import": "./dist/scenarioEngine/index.js",
      "require": "./dist/scenarioEngine/index.js",
      "types": "./dist/scenarioEngine/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "jest": {
    "transformIgnorePatterns": [
      "node_modules/(?!(@polkadot|@acala-network)/)"
    ],
    "moduleNameMapper": {
      "^@polkadot/rpc-core/types/(.*)$": "<rootDir>/../../node_modules/@polkadot/rpc-core/cjs/types/$1",
      "^@polkadot/([^/]+)/(?!cjs/)(.+)$": "<rootDir>/../../node_modules/@polkadot/$1/cjs/$2",
      "^@polkadot/x-bigint$": "<rootDir>/../../node_modules/@polkadot/x-bigint/cjs/index.js",
      "^@polkadot/x-bigint/shim$": "<rootDir>/../../node_modules/@polkadot/x-bigint/cjs/shim.js",
      "^@polkadot/x-textdecoder$": "<rootDir>/../../node_modules/@polkadot/x-textdecoder/cjs/node.js",
      "^@polkadot/x-textencoder$": "<rootDir>/../../node_modules/@polkadot/x-textencoder/cjs/node.js",
      "^@polkadot/x-fetch$": "<rootDir>/../../node_modules/@polkadot/x-fetch/cjs/node.js",
      "^@polkadot/x-global$": "<rootDir>/../../node_modules/@polkadot/x-global/cjs/index.js",
      "^@polkadot/x-randomvalues$": "<rootDir>/../../node_modules/@polkadot/x-randomvalues/cjs/node.js",
      "^@polkadot/x-ws$": "<rootDir>/../../node_modules/@polkadot/x-ws/cjs/node.js"
    }
  }
}

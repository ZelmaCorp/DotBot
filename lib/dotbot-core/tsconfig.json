{
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "module": "CommonJS",
    "target": "ES2019",
    "moduleResolution": "node",
    "lib": ["ES2019", "ES2020.Promise", "ES2020.String", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "sourceMap": true,
    "noEmitOnError": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist", "**/tests/**", "**/__mocks__/**", "**/*.test.ts", "**/*.spec.ts"]
}

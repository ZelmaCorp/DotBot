{
  "name": "dotbot-backend",
  "version": "0.3.0",
  "description": "DotBot backend server - API gateway to access DotBot",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch --passWithNoTests",
    "test:integration": "ts-node test/integration/openapi-test-runner.ts",
    "test:websocket": "ts-node test/integration/websocket-test.ts",
    "test:endpoint": "ts-node test/integration/openapi-test-runner.ts",
    "test:all": "npm run test:integration && npm run test:websocket",
    "type-check": "tsc --noEmit",
    "mock": "prism mock openapi.yaml -p 8000 --dynamic",
    "mock:verbose": "prism mock openapi.yaml -p 8000 --dynamic --verbosity debug"
  },
  "keywords": [
    "dotbot",
    "polkadot",
    "blockchain",
    "ai",
    "backend"
  ],
  "author": "",
  "license": "GNU General Public License v3.0",
  "dependencies": {
    "@dotbot/core": "file:../lib/dotbot-core",
    "@dotbot/express": "file:../lib/dotbot-express",
    "@polkadot/api": "^14.3.1",
    "@polkadot/keyring": "^13.5.9",
    "@polkadot/types": "^14.3.1",
    "@polkadot/util": "^13.5.9",
    "@polkadot/util-crypto": "^13.5.9",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "pino": "^9.9.4",
    "socket.io": "^4.7.4"
  },
  "devDependencies": {
    "@stoplight/prism-cli": "^5.11.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.19.29",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "axios": "^1.13.2",
    "jest": "^29.7.0",
    "openapi-types": "^12.1.3",
    "pino-pretty": "^11.2.2",
    "socket.io-client": "^4.7.4",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3",
    "yaml": "^2.8.2"
  }
}

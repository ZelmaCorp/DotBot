# DotBot Backend Environment Configuration
# Copy this file to .env and configure for your environment
#
# IMPORTANT: Never commit .env to version control!

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Server port (default: 8000)
PORT=8000

# Environment (development/production)
NODE_ENV=development

# Log level (debug/info/warn/error)
LOG_LEVEL=debug

# =============================================================================
# CORS CONFIGURATION
# =============================================================================

# Allowed CORS origins (comma-separated)
# In development, localhost origins are automatically allowed
# Examples:
#   CORS_ORIGINS=http://localhost:3000,https://dotbot.example.com
#   CORS_ORIGINS=*  (allow all - not recommended for production)
# Leave empty to allow all origins in development
CORS_ORIGINS=

# =============================================================================
# AI PROVIDER CONFIGURATION
# =============================================================================

# Default AI provider (asi-one/claude)
# Defaults to 'asi-one' if not specified
AI_PROVIDER=asi-one

# =============================================================================
# ASI-ONE INTEGRATION (Required if using ASI-One)
# =============================================================================

# Get your API key from: https://agentverse.ai/ or your ASI-One provider
ASI_ONE_API_KEY=your_asi_one_api_key_here

# Optional: Override default base URL (default: https://api.asi1.ai/v1)
# ASI_ONE_BASE_URL=https://api.asi1.ai/v1

# Optional: Override default model (default: asi1-mini)
# ASI_ONE_MODEL=asi1-mini

# Optional: Override max tokens (default: 2048)
# ASI_ONE_MAX_TOKENS=2048

# =============================================================================
# CLAUDE (ANTHROPIC) INTEGRATION (Required if using Claude)
# =============================================================================

# Get your API key from: https://console.anthropic.com/
# CLAUDE_API_KEY=your_claude_api_key_here

# Optional: Override default base URL (default: https://api.anthropic.com/v1)
# CLAUDE_BASE_URL=https://api.anthropic.com/v1

# Optional: Override default model (default: claude-sonnet-4-20250514)
# CLAUDE_MODEL=claude-sonnet-4-20250514

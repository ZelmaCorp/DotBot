# Production Environment Configuration
# Copy this file to .env on your production server

# =============================================================================
# CORE CONFIGURATION
# =============================================================================

NODE_ENV=production
DEBUG=false
# LOG_LEVEL: Use lowercase format (info, warn, error, etc.)
# Production typically uses 'warn' to reduce log volume
LOG_LEVEL=warn

# =============================================================================
# DOMAIN CONFIGURATION
# =============================================================================

DOMAIN_NAME=live.dotbot.zelmacorp.io
ACME_EMAIL=admin@company.com

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

POSTGRES_DB=dotbot_production
POSTGRES_USER=dotbot
POSTGRES_PASSWORD=CHANGE_ME_TO_SECURE_PASSWORD
DATABASE_URL=postgresql://dotbot:CHANGE_ME_TO_SECURE_PASSWORD@postgres:5432/dotbot_production

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================

REDIS_URL=redis://redis:6379

# =============================================================================
# APPLICATION URLs
# =============================================================================
# NOTE: Base URLs should NOT include /api suffix
# API paths will be appended by application code

FRONTEND_URL=https://live.dotbot.zelmacorp.io
BACKEND_URL=https://live.dotbot.zelmacorp.io
WS_URL=wss://live.dotbot.zelmacorp.io

# =============================================================================
# AI PROVIDER CONFIGURATION
# =============================================================================

AI_PROVIDER=asi-one
ASI_ONE_API_KEY=your_asi_one_api_key_here
ASI_ONE_ENDPOINT=https://agentverse.ai/api/v1
ASI_ONE_BASE_URL=https://api.asi1.ai/v1

# =============================================================================
# SECURITY
# =============================================================================

SESSION_SECRET=CHANGE_ME_TO_LONG_RANDOM_STRING
CORS_ORIGINS=https://live.dotbot.zelmacorp.io

# =============================================================================
# FEATURE FLAGS
# =============================================================================

ENABLE_BACKEND_MEMORY=true
ENABLE_BACKEND_PAYMENTS=true
ENABLE_ANALYTICS=true
ENABLE_DEBUG_LOGGING=false

# =============================================================================
# PRODUCTION SECURITY SETTINGS
# =============================================================================

FORCE_HTTPS=true
ENABLE_COMPRESSION=true
MINIFY_ASSETS=true

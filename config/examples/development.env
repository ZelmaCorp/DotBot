# Development Environment Configuration
# Copy this file to .env in your backend directory

# =============================================================================
# CORE CONFIGURATION
# =============================================================================

NODE_ENV=development
DEBUG=true
# LOG_LEVEL: Controls verbosity (trace, debug, info, warn, error, fatal)
# Use lowercase format
LOG_LEVEL=debug

# =============================================================================
# APPLICATION URLs
# =============================================================================
# NOTE: Base URLs should NOT include /api suffix
# API paths will be appended by application code

FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000
WS_URL=ws://localhost:8000

# =============================================================================
# AI PROVIDER CONFIGURATION
# =============================================================================

# Select AI provider: 'asi-one' or 'claude'
AI_PROVIDER=asi-one

# ASI-One Configuration
ASI_ONE_API_KEY=your_asi_one_api_key_here
ASI_ONE_ENDPOINT=https://agentverse.ai/api/v1
ASI_ONE_BASE_URL=https://api.asi1.ai/v1

# Claude Configuration (optional)
CLAUDE_API_KEY=your_claude_api_key_here

# =============================================================================
# DATABASE (Optional - for memory service)
# =============================================================================

# DATABASE_URL=postgresql://localhost:5432/dotbot
# DATABASE_URL=sqlite:///./dotbot.db

# =============================================================================
# REDIS (Optional - for caching)
# =============================================================================

# REDIS_URL=redis://localhost:6379

# =============================================================================
# SECURITY
# =============================================================================

SESSION_SECRET=dev_secret_change_in_production
CORS_ORIGINS=http://localhost:3000

# =============================================================================
# FEATURE FLAGS
# =============================================================================

ENABLE_BACKEND_MEMORY=false
ENABLE_BACKEND_PAYMENTS=false
ENABLE_ANALYTICS=false
ENABLE_DEBUG_LOGGING=true

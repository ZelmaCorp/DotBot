# DotBot Environment Configuration
# Copy this file to .env and configure for your environment

# =============================================================================
# CORE CONFIGURATION (Required for basic functionality)
# =============================================================================

# Application Environment
NODE_ENV=development                    # development/testing/production
DEBUG=true                             # Enable debug logging
LOG_LEVEL=INFO                         # DEBUG/INFO/WARNING/ERROR

# =============================================================================
# AGENT CONFIGURATION (Required for agent communication)
# =============================================================================

# ASI-One / AgentVerse Configuration
ASI_ONE_ENDPOINT=https://agentverse.ai/api/v1   # AgentVerse API endpoint
ASI_ONE_API_KEY=your_asi_one_api_key_here       # Your ASI-One API key

# Agent Communication
AGENT_COMMUNICATION_MODE=direct         # direct/proxy
AGENT_TIMEOUT=30                       # Agent response timeout in seconds
AGENT_RETRY_ATTEMPTS=3                 # Number of retry attempts

# =============================================================================
# BLOCKCHAIN CONFIGURATION (Required for Polkadot integration)
# =============================================================================

# Primary Network
DEFAULT_NETWORK=polkadot               # polkadot/kusama/westend

# Polkadot Network
POLKADOT_RPC_URL=wss://rpc.polkadot.io
POLKADOT_BACKUP_RPCS=wss://polkadot-rpc.dwellir.com,wss://rpc.dotters.network/polkadot

# Kusama Network (for future expansion)
KUSAMA_RPC_URL=wss://kusama-rpc.polkadot.io
KUSAMA_BACKUP_RPCS=wss://kusama-rpc.dwellir.com

# Westend Testnet
WESTEND_RPC_URL=wss://westend-rpc.polkadot.io

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================

# Application URLs
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000

# Feature Flags
ENABLE_VOICE_INPUT=true                # Enable voice input functionality
ENABLE_BACKEND_MEMORY=false            # Use backend for memory (optional)
ENABLE_BACKEND_PAYMENTS=false          # Use backend for payments (optional)
ENABLE_ANALYTICS=false                 # Enable usage analytics

# Wallet Integration
SUPPORTED_WALLETS=talisman,subwallet,polkadot-js
AUTO_CONNECT_WALLET=false              # Automatically connect to last used wallet

# =============================================================================
# OPTIONAL BACKEND CONFIGURATION (Enhanced features)
# =============================================================================

# Database (Optional - for memory service)
DATABASE_URL=postgresql://localhost:5432/dotbot
# Alternative: Use SQLite for simpler setup
# DATABASE_URL=sqlite:///./dotbot.db

# Redis (Optional - for caching and sessions)
REDIS_URL=redis://localhost:6379

# Memory Service (Optional)
ENABLE_MEMORY_SERVICE=false            # Enable persistent conversation memory
MEMORY_RETENTION_DAYS=30               # How long to keep conversation history

# Payment Service (Optional)
ENABLE_PAYMENT_SERVICE=false           # Enable payment processing
STRIPE_PUBLISHABLE_KEY=pk_test_...     # Stripe public key
STRIPE_SECRET_KEY=sk_test_...          # Stripe secret key
PAYMENT_WEBHOOK_SECRET=whsec_...       # Stripe webhook secret

# =============================================================================
# VOICE INPUT CONFIGURATION (Optional)
# =============================================================================

VOICE_SERVICE_PROVIDER=browser         # browser/google/azure
VOICE_LANGUAGE=en-US                   # Speech recognition language

# Google Speech API (Optional)
GOOGLE_SPEECH_API_KEY=your_google_key
GOOGLE_SPEECH_LANGUAGE=en-US

# Azure Speech API (Optional)
AZURE_SPEECH_KEY=your_azure_key
AZURE_SPEECH_REGION=eastus
AZURE_SPEECH_LANGUAGE=en-US

# =============================================================================
# ANALYTICS & MONITORING (Optional)
# =============================================================================

# Error Tracking
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id
SENTRY_ENVIRONMENT=development

# Analytics
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX      # Google Analytics tracking ID
MIXPANEL_TOKEN=your_mixpanel_token     # Mixpanel analytics token

# Performance Monitoring
PERFORMANCE_MONITORING=false           # Enable performance monitoring
PERFORMANCE_SAMPLE_RATE=0.1            # Sample rate for performance monitoring

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# API Security
API_RATE_LIMIT=100                     # Requests per minute per IP
API_RATE_LIMIT_WINDOW=60               # Rate limit window in seconds

# CORS Configuration
CORS_ORIGINS=http://localhost:3000     # Allowed CORS origins
CORS_CREDENTIALS=true                  # Allow credentials in CORS

# Session Security
SESSION_SECRET=your_session_secret_here # Session encryption secret
SESSION_TIMEOUT=3600                   # Session timeout in seconds

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Development Features
MOCK_AGENTS=false                      # Use mock agents instead of real ones
MOCK_BLOCKCHAIN=false                  # Mock blockchain calls for testing
ENABLE_DEBUG_LOGGING=true              # Enable detailed debug logs

# Hot Reload
ENABLE_HOT_RELOAD=true                 # Enable hot reload for development
WATCH_FILES=true                       # Watch files for changes

# Testing
TEST_DATABASE_URL=sqlite:///./test.db  # Test database URL
TEST_REDIS_URL=redis://localhost:6380  # Test Redis URL

# =============================================================================
# DEPLOYMENT CONFIGURATION (Production)
# =============================================================================

# Production Settings
PRODUCTION_MODE=false                  # Enable production optimizations
MINIFY_ASSETS=false                    # Minify CSS/JS assets
ENABLE_COMPRESSION=false               # Enable gzip compression

# SSL/TLS
SSL_CERT_PATH=/path/to/cert.pem       # SSL certificate path
SSL_KEY_PATH=/path/to/key.pem         # SSL private key path
FORCE_HTTPS=false                     # Force HTTPS redirects

# CDN Configuration
CDN_URL=https://cdn.example.com       # CDN URL for static assets
STATIC_URL=/static                    # Static files URL prefix

# =============================================================================
# AGENT-SPECIFIC CONFIGURATION
# =============================================================================

# Asset Transfer Agent
ASSET_TRANSFER_AGENT_URL=http://localhost:8001
ASSET_TRANSFER_MAX_AMOUNT=1000        # Maximum transfer amount
ASSET_TRANSFER_MIN_AMOUNT=0.01        # Minimum transfer amount

# Asset Swap Agent
ASSET_SWAP_AGENT_URL=http://localhost:8002
ASSET_SWAP_SLIPPAGE_TOLERANCE=0.5     # Maximum slippage tolerance (%)
ASSET_SWAP_DEADLINE=20                # Transaction deadline in minutes

# Governance Agent
GOVERNANCE_AGENT_URL=http://localhost:8003
GOVERNANCE_AUTO_VOTE=false            # Automatically vote based on recommendations

# Multisig Agent
MULTISIG_AGENT_URL=http://localhost:8004
MULTISIG_MAX_SIGNERS=10               # Maximum number of multisig signers
MULTISIG_DEFAULT_THRESHOLD=2          # Default multisig threshold

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Core Features
ENABLE_CHAT_INTERFACE=true            # Enable chat interface
ENABLE_QUICK_ACTIONS=true             # Enable quick action buttons
ENABLE_TRANSACTION_HISTORY=true       # Enable transaction history
ENABLE_WALLET_MANAGEMENT=true         # Enable wallet management

# Advanced Features
ENABLE_BATCH_TRANSACTIONS=false       # Enable batch transaction processing
ENABLE_SCHEDULED_TRANSACTIONS=false   # Enable scheduled transactions
ENABLE_TRANSACTION_TEMPLATES=false    # Enable transaction templates

# Experimental Features
ENABLE_AI_SUGGESTIONS=false           # Enable AI-powered suggestions
ENABLE_PORTFOLIO_ANALYSIS=false       # Enable portfolio analysis
ENABLE_YIELD_OPTIMIZATION=false       # Enable yield optimization recommendations

# =============================================================================
# QUICK SETUP PRESETS
# =============================================================================

# Uncomment one of these preset configurations:

# --- PRESET 1: MINIMAL SETUP (No backend, no external services) ---
# ASI_ONE_API_KEY=your_key_here
# ENABLE_BACKEND_MEMORY=false
# ENABLE_BACKEND_PAYMENTS=false
# VOICE_SERVICE_PROVIDER=browser
# MOCK_AGENTS=false

# --- PRESET 2: FULL FEATURES (All services enabled) ---
# ASI_ONE_API_KEY=your_key_here
# ENABLE_BACKEND_MEMORY=true
# ENABLE_BACKEND_PAYMENTS=true
# ENABLE_ANALYTICS=true
# DATABASE_URL=postgresql://localhost:5432/dotbot
# REDIS_URL=redis://localhost:6379

# --- PRESET 3: DEMO MODE (For presentations) ---
# ASI_ONE_API_KEY=your_key_here
# MOCK_AGENTS=true
# MOCK_BLOCKCHAIN=true
# ENABLE_DEBUG_LOGGING=true
